#:kivy 1.1.0

Root:
    
    text_input: text_input

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
			width: 50
            height: 50
            Button:
                text: 'Choose pdf file to convert to audio'
                on_release: root.show_load()
				on_press: root.isShownMenu = not root.isShownMenu
            

        BoxLayout:
            TextInput:
                id: text_input
                text: ''

 

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
				

            Button:
                text: "Load"
				
                on_release: root.load(filechooser.path, filechooser.selection)
			
<AudioDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Load another file"
                on_release: root.cancel1()

            			

