{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "declarationDir": "./dts/",
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "watch": false,
    "lib": [
      "dom",
      "es2017"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node",
      "mocha"
    ]
  },
  "exclude": [
    "node_modules",
    "test",
    "dts"
  ]
}