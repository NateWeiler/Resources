{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es5",
            "es2015.promise",
            "dom"
        ]
    },
    "include": [ "src/**/*" ]
}